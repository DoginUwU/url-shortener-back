// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  username   String      @unique
  email      String      @unique
  password   String
  createdAt  DateTime    @default(now())
  shorteners Shortener[]

  @@map("users")
}

model Shortener {
  shortId   String      @id @unique
  user      User?       @relation(fields: [userId], references: [id])
  url       String
  password  String?
  limit     Int?
  clicks    Int         @default(0)
  userId    String?
  category  String?
  lifeTime  DateTime
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  IPAddress IPAddress[]

  @@map("shorteners")
}

model IPAddress {
  id        String    @id @default(uuid())
  short     Shortener @relation(fields: [shortId], references: [shortId], onDelete: Cascade)
  shortId   String
  address   String
  createdAt DateTime  @default(now())

  @@map("ip_addresses")
}
