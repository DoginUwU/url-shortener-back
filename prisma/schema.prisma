generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  username  String      @unique
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  Shortener Shortener[]

  @@map("users")
}

model Shortener {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  url       String
  shortId   String   @unique
  limit     Int?
  clicks    Int      @default(0)
  userId    String?
  category  String?
  lifeTime  DateTime
  createdAt DateTime @default(now())

  @@map("shorteners")
}
